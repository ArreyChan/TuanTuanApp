.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  height: 100%;
  width: 100%;
}
.JJ {
  text-align: left;
  line-height: 100rpx;
  color: #ff758c;
  width: 600rpx;
  height: 100rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
}
.JJ .JJ_1 {
  color: #333333;
  font-size: 40rpx;
  letter-spacing: 10rpx;
}
.JJ text {
  letter-spacing: 30rpx;
  font-size: 50rpx;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nav .nav_item {
  width: 25%;
  text-align: center;
}
.nav .nav_item view {
  width: 150rpx;
  height: 120rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  margin: 10px auto;
  line-height: 120rpx;
  color: #ff758c;
  font-size: 80rpx;
}
.nav .nav_item text {
  color: #ff758c;
}
.nav .nav_item .icon-tupian {
  font-size: 60rpx;
}
.nav .nav_item text {
  font-size: 30rpx;
}
.good {
  background: #e3eeff;
  overflow: hidden;
  margin: 20rpx;
}
.good .tit {
  height: 80px;
  line-height: 80px;
  color: #ff758c;
  text-align: center;
  letter-spacing: 20px;
  background: #FFFFFF;
  font-size: 40rpx;
  margin: 3rpx 0;
  font-weight: bold;
}
.list_good {
  padding: 0 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.list_good .goods_item {
  background: #FFFFFF;
  width: 330rpx;
  margin: 10rpx 0;
  padding: 15rpx;
  box-sizing: border-box;
}
.list_good .goods_item image {
  width: 100%;
  height: 300rpx;
  display: block;
  margin: auto;
}
.list_good .price {
  color: #ff758c;
  font-size: 30rpx;
  margin: 20rpx 0 5rpx 0;
  font-weight: bold;
}
.list_good .price text:nth-child(2) {
  color: #C0C0C0;
  font-size: 25rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.list_good .name {
  font-size: 27rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
  font-weight: bold;
  color: #ff758c;
}

