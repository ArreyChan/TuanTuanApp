page {
  height: 100%;
}
.tags {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #fff;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: 710rpx;
  margin: 20rpx;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-align-content: flex-start;
          align-content: flex-start;
}
view.tag, .tag {
  display: block;
  width: 177.5rpx;
  height: 180rpx;
  padding: 24rpx;
  line-height: 1;
  box-sizing: border-box;
  text-align: center;
}
.tag-img {
  border-radius: 60rpx;
  width: 120rpx;
  height: 120rpx;
}
.tag-text {
  font-size: 28rpx;
  color: #555555;
}
.pic {
  height: 100%;
}
.pic .left {
  width: 200rpx;
  height: 100%;
  border-right: 1px solid #eee;
}
.pic .left view {
  height: 60px;
  line-height: 60px;
  color: #333333;
  text-align: center;
  font-size: 30rpx;
  border-top: 1px solid #eee;
}
.pic .active {
  background: #ff758c;
  color: #FFFFFF;
}
.good {
  background: #e3eeff;
  overflow: hidden;
  margin: 20rpx;
}
.good .tit {
  height: 80px;
  line-height: 80px;
  color: #ff758c;
  text-align: center;
  letter-spacing: 20px;
  background: #FFFFFF;
  font-size: 40rpx;
  margin: 3rpx 0;
  font-weight: bold;
}
.list_good {
  padding: 0 15rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.list_good .goods_item {
  background: #FFFFFF;
  width: 330rpx;
  margin: 10rpx 0;
  padding: 15rpx;
  box-sizing: border-box;
}
.list_good .goods_item image {
  width: 100%;
  height: 300rpx;
  display: block;
  margin: auto;
}
.list_good .price {
  color: #ff758c;
  font-size: 30rpx;
  margin: 20rpx 0 5rpx 0;
  font-weight: bold;
}
.list_good .price text:nth-child(2) {
  color: #C0C0C0;
  font-size: 25rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.list_good .name {
  font-size: 27rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
  font-weight: bold;
  color: #ff758c;
}

